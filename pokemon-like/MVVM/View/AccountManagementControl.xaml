<UserControl x:Class="PokemonLike.Views.AccountManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="Auto">
    <StackPanel Margin="10">
        <TextBlock Text="User Information" FontWeight="Bold" Width="99"/>
        <TextBlock x:Name="UsernameTextBlock" Margin="0,5" />
        <TextBlock x:Name="UserEmailTextBlock" Margin="0,5" />
        <Button Content="Log Out" Click="LogOut_Click" Margin="5,5,0,10" Style="{StaticResource PokemonButtonStyle}" Width="128"/>
        <Button Content="Delete Account" Click="DeleteAccount_Click" Margin="5,5,0,10" Style="{StaticResource PokemonButtonStyle}" Width="129" Height="27"/>
    </StackPanel>
</UserControl>
