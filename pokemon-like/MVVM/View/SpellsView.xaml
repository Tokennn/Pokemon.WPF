<Window x:Class="PokemonLike.Views.SpellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spell Details" Height="450" Width="800">
    <Grid Background="#FF8C8C8C">
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="695*"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="SpellName" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="329,10,0,0" Grid.Column="1" />
        <TextBlock x:Name="SpellDamage" TextWrapping="Wrap" Margin="10,76,10,0" VerticalAlignment="Top" Grid.ColumnSpan="3" />
        <TextBlock x:Name="SpellDescription" TextWrapping="Wrap" Margin="10,55,10,0" VerticalAlignment="Top" Grid.ColumnSpan="3" />
        <Button Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="677,19,0,0" Click="CloseButton_Click" Style="{StaticResource PokemonButtonStyle}" Width="28" Background="#FF0016CC" Height="24" Grid.Column="1" Grid.ColumnSpan="2" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
